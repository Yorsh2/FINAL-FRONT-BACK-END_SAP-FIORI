<mvc:View
    controllerName="com.invertions.sapfiorimodinv.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
>
    
            <m:VBox
                id="LoginVBox_login"
                height="100%"
                width="100%"
                justifyContent="Center"
                alignItems="Center"
                class="sapUiResponsiveMargin"
            >
                <m:Image
                    id="LoginImage_login"
                    src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/59/SAP_2011_logo.svg/2560px-SAP_2011_logo.svg.png"
                    width="400px"
                    class="sapUiSmallMarginBottom"
                />

                <m:Input
                    id="emailInput_login"
                    type="Email"
                    placeholder="Correo"
                    value="{loginModel>/email}"    
                    width="300px"
                    class="sapUiSmallMarginBottom"
                />
                <m:HBox width="300px" class="sapUiSmallMarginBottom">
                    <m:Input
                        id="passwordInput_login"
                        placeholder="Contrase침a"
                        value="{loginModel>/password}"  
                        type="Password"
                        width="100%"
                    />
                    <m:Button
                        id="showPasswordButton_login"
                        icon="sap-icon://show"
                        type="Transparent"
                        press=".onVerContrase침a"
                        tooltip="Mostrar/Ocultar contrase침a"
                    />
                </m:HBox>

                <m:Button
                    id="loginButton_login"
                    text="Iniciar Sesi칩n"
                    press=".onLoginPress"
                    width="300px"
                />
            </m:VBox>

</mvc:View>
