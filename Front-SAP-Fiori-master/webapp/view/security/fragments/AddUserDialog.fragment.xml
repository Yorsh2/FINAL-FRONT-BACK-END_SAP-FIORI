<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        id="AddUserDialog"
        title="Añadir Usuario"
        icon="sap-icon://add"
        type="Message"
        class="customDialogSize"
        draggable="true"
        resizable="true"
    >
        <VBox id="AddUserDialogVbox" class="sapUiSmallMargin">

            <!-- Binding al modelo nombrado 'newUser' -->
            <Input id="inputUserId" value="{newUser>USERID}" placeholder="ID de Usuario"/>
            <Input id="inputUsername" value="{newUser>USERNAME}" placeholder="Nombre Completo"/>
            <Input id="inputUserPhoneNumber" value="{newUser>PHONENUMBER}" placeholder="Número telefónico"/>
            <Input id="inputUserEmail" value="{newUser>EMAIL}" placeholder="Correo Electrónico"/>
            <DatePicker id="inputUserBirthdayDate" value="{newUser>BIRTHDAYDATE}" placeholder="Fecha de nacimiento"/>

            <ComboBox 
                id="comboBoxCompanies" 
                items="{companiesModel>/value}" 
                selectionChange="onCompanySelected" 
                placeholder="Compañía">
                <core:Item key="{companiesModel>VALUEID}" text="{companiesModel>VALUE}" />
            </ComboBox>


            <ComboBox 
                id="comboBoxCedis" 
                items="{deptosModel>/value}" 
                selectionChange="onCediSelected" 
                placeholder="Departamento">
                <core:Item key="{deptosModel>VALUEID}" text="{deptosModel>VALUE}" />
            </ComboBox>


            <ComboBox
                id="comboBoxRoles"
                items="{rolesModel>/roles}"
                selectionChange="onRoleSelected"
                placeholder="Selecciona un Rol">
                <core:Item key="{rolesModel>ROLEID}" text="{rolesModel>ROLENAME}" />
            </ComboBox>


            <VBox id="selectedRolesVBox" class="sapUiSmallMarginTop">
                <!-- VBox donde va añadiendo los roles -->
            </VBox>

            <Input id="inputUserFunction" value="{newUser>FUNCTION}" placeholder="Función que ejerce"/>

        </VBox>

        <beginButton>
            <Button id="SaveNewUser" text="Guardar" type="Emphasized" press="onSaveUser" />
        </beginButton>

        <endButton>
            <Button id="CancelSaveUser" text="Cancelar" press="onCancelUser" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
