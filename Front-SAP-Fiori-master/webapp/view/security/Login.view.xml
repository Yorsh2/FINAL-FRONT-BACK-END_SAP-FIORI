<mvc:View
    controllerName="com.invertions.sapfiorimodinv.controller.security.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
>
    <m:Page id="LoginPage"
            class="sapUiContentPadding"
            showHeader="false"
            showNavButton="false"
            backgroundDesign="Solid"
        >
            <m:content>
                <m:VBox id="LoginVBox"
                    class="sapUiSmallMargin"
                    width="100%"
                    height="100%"
                    justifyContent="Center"
                    alignItems="Center" 
                >
                    <m:Image id="LoginImage"
                        src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/59/SAP_2011_logo.svg/2560px-SAP_2011_logo.svg.png"
                        width="400px"
                        height="auto"
                        class="sapUiSmallMarginBottom"
                    />  
                    <m:Input
                        id="emailInput"
                        type="Email"
                        placeholder="Correo"
                        value="{/email}"
                        width="300px"
                        class="sapUiSmallMarginBottom"
                    />
                    <m:HBox width="300px" class="sapUiSmallMarginBottom">
                        <m:Input
                            id="passwordInput"
                            placeholder="Contraseña"
                            value="{/password}"
                            type="Password"
                            width="300px"
                        />
                        <m:Button
                            id="showPasswordButton"
                            icon="sap-icon://show"
                            type="Transparent"
                            press=".onVerContraseña"
                            tooltip="Mostrar/Ocultar contraseña"
                        />
                    </m:HBox>
                    
                    <m:Button id="loginButton"
                        text="Iniciar Sesion"
                        press=".onLoginPress"
                        width="100%"
                    />
                </m:VBox>
            </m:content>
        </m:Page>            
 
</mvc:View>